# Runtime
NODE_ENV=development
APP_URL=http://localhost:3000
CRON_SECRET=change-me-to-long-secret
APP_PIN=3698

# Database
# Required: cranl internal PostgreSQL URL
# Example: DATABASE_URL=postgresql://user:pass@cranl-internal-host:5432/trendyol_guard
DATABASE_URL=postgresql://user:pass@cranl-internal-host:5432/trendyol_guard

# Trendyol Credentials
# Supports either TRENDYOL_SUPPLIER_ID or TRENDYOL_SELLER_ID
TRENDYOL_SUPPLIER_ID=
TRENDYOL_SELLER_ID=
TRENDYOL_API_KEY=
TRENDYOL_API_SECRET=
# Optional precomputed base64(apiKey:apiSecret)
TRENDYOL_API_TOKEN=
TRENDYOL_BASE_URL=https://apigw.trendyol.com
TRENDYOL_USER_AGENT=1111632 - TrendyolBuyBoxGuard
TRENDYOL_STOREFRONT_CODE=SA

# Salla Credentials (OAuth + read-only product APIs)
SALLA_BASE_URL=https://api.salla.dev/admin/v2
# Recommended: direct read-only token
SALLA_ACCESS_TOKEN=
# Optional OAuth settings (used by /api/integrations/salla/oauth/*)
SALLA_OAUTH_BASE_URL=https://accounts.salla.sa
SALLA_CLIENT_ID=
SALLA_CLIENT_SECRET=
SALLA_REDIRECT_URI=
SALLA_COST_SOURCE=PRE_TAX

# Defaults
DEFAULT_VAT_RATE=15
DEFAULT_COOLDOWN_MINUTES=15

# Automatic catalog sync (runs inside each cron poll)
AUTO_SYNC_CATALOG=true
AUTO_SYNC_MAX_PAGES=5
AUTO_SYNC_PAGE_SIZE=50

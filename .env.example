# Runtime
NODE_ENV=development
APP_URL=http://localhost:3000
CRON_SECRET=change-me-to-long-secret

# Database
# If DATABASE_URL is missing, app defaults to SQLite file:./prisma/dev.db
# DB_PROVIDER is auto-resolved from DATABASE_URL; keep empty unless overriding manually.
DB_PROVIDER=
# Production (cranl internal Postgres) example:
# DATABASE_URL=postgresql://user:pass@cranl-internal-host:5432/trendyol_guard
DATABASE_URL=

# Trendyol Credentials
# Supports either TRENDYOL_SUPPLIER_ID or TRENDYOL_SELLER_ID
TRENDYOL_SUPPLIER_ID=
TRENDYOL_SELLER_ID=
TRENDYOL_API_KEY=
TRENDYOL_API_SECRET=
# Optional precomputed base64(apiKey:apiSecret)
TRENDYOL_API_TOKEN=
TRENDYOL_BASE_URL=https://apigw.trendyol.com
TRENDYOL_USER_AGENT=1111632 - TrendyolBuyBoxGuard

# Notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL_TO=

TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Seed defaults
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=
DEFAULT_VAT_RATE=15
DEFAULT_COOLDOWN_MINUTES=15
